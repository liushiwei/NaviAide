<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal" >
    <ImageView  android:layout_width="wrap_content" android:id="@+id/mark"
    android:layout_height="wrap_content"/>
	<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
	    <TextView android:id="@+id/markName" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:singleLine="true" android:textSize="20sp" android:textColor="@android:color/black"/>
	    <TextView android:id="@+id/markPlace" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:singleLine="true" android:textSize="18sp" android:textColor="#808080"/>
	</LinearLayout>
</LinearLayout>